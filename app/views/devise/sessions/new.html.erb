<main class="container">
  <h2 class="form-header">Log in</h2>

  <%= form_for(resource,
               as: resource_name,
               url: session_path(resource_name),
               html: { class: "form" }) do |f| %>
    <div class="form__field">
      <%= f.label :email, class: "form__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__email" %>
    </div>

    <div class="form__field">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form__password" %>
    </div>

    <div class="form__actions">
      <%= f.submit "Log in", class: 'btn btn--secondary', data: { turbo: false } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

